-if active['accounts']
  %li.nav-item.dropdown.active
    %span.sr-only (current)
    =link_to nil, class: 'nav-link dropdown-toggle', id: 'navbarDropdown', role: 'button', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'} do
      Accounts
    %ul.dropdown-menu{ aria: {labelledby: 'navbarDropdown'}}
      %li
        =link_to 'Create An Account', new_user_registration_path, class: 'dropdown-item'
      %li.dropdown-divider
      %li
        =link_to 'Sign In', new_user_session_path(current_user), class: 'dropdown-item'
