<%= javascript_pack_tag 'application' %>
<%= render partial: 'shared/nav', locals: { active: 'dashboard'} %>
<div class="container-fluid">
  <div class="row">
    <%= render partial: 'admins/shared/side_nav' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <header class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
          Dashboard
          <span class="lead">/ Testimonials / Show</span>
        </h1>
      </header>
      <section class="bg-light p-3 mb-3">
        <%= form_for @testimonial, url: admin_testimonial_path(current_user, @testimonial), method: :patch do |f| %>
          <section class="row">
            <dl class="col-sm">
              <dt>Full Name:</dt>
              <dd><%= @testimonial.user.full_name.titleize %></dd>
            </dl>
            <dl class="col-sm">
              <dt>Email Address:</dt>
              <dd><%= @testimonial.user.email %></dd>
            </dl>
            <dl class="col-sm">
              <dt>Submitted:</dt>
              <dd><%= format_datetime(@testimonial.created_at) %></dd>
            </dl>
            <dl class="col-sm">
              <dt>Published:</dt>
              <% if @testimonial.published == true %>
                <dd class="text-success"><%= @testimonial.published %></dd>
              <% else %>
                <dd class="text-danger"><%= @testimonial.published %></dd>
              <% end %>
            </dl>
            <dl class="col-sm-12">
              <dt>Viewable Name:</dt>
              <dd><%= f.text_field :created_by, value: format_name(@testimonial.user.full_name), class: 'bg-light'%></dd>
            </dl>
          </section>
          <hr class="my-4">
          <section class="row">
            <dl class="col-sm">
              <dt>Message:</dt>
              <dd class="px-5 pt-5"><%= @testimonial.message %></dd>
            </dl>
          </section>
          <hr class="my-4">
          <section class="row">
            <dl class="col-sm-12">
              <dt class="mb-3">Highlight: <span>(Truncated Version)</span></dt>
              <dd>
                <%= f.rich_text_area :highlight %>
              </dd>
            </dl>
            <p id="characters_remaining" class="text-success">(150 Characters Remaining)</p>
          </section>
          <hr class="my-4">
          <section class="row">
            <%= f.submit 'Publish', class: 'btn btn-outline-secondary col-lg-2' %>
            <%= link_to 'Delete', admin_testimonial_path(current_user, @testimonial), method: :delete, class: 'btn btn-outline-danger col-lg-2' %>
          </section>
        <% end %>
      </section>
    </main>
  </div>
</div>
<script>
  const $REMAINING = $('#characters_remaining');
  const TOTAL = 150;

  const testimonial = {
    init: function() {
      this.bindEvents();
    },
    bindEvents: function() {
      $('trix-editor').on('trix-change', this.calculateCount.bind(this));
    },
    calculateCount: function(e) {
      const { editor } = event.target
      const string = editor.getDocument().toString()
      const characterCount = string.length - 1
      this.changeRemainingCount(characterCount)
    },
    changeRemainingCount: function(count) {
      const charsRemaining = TOTAL - count;
      $REMAINING.text('(' + charsRemaining + ' ' + this.pluralize('Character', charsRemaining) + ' Remaining)');
      this.toggleClass(charsRemaining);
    },
    pluralize: function(string, count) {
      if (count === 1 || count === -1) {
        return string;
      } else {
        return string + "s";
      }
    },
    toggleClass: function(charsRemaining) {
      if (charsRemaining >= 0) {
        $REMAINING.toggleClass('text-success', true);
        $REMAINING.toggleClass('text-danger', false);
      } else {
        $REMAINING.toggleClass('text-success', false);
        $REMAINING.toggleClass('text-danger', true);
      }
    }
  };

  testimonial.init();
</script>
